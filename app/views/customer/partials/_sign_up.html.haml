- customer = Customer.new
= simple_form_for customer, url: customer_registration_path, method: :POST do |f|
  = f.error_notification

  .row
    .col-md-12
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-user.fa-fw
        = f.input :name, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'Nombre (s)' }
  .row
    .col-md-6
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-user.fa-fw
        = f.input :paternal_name, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'Apellido paterno' }

    .col-md-6
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-user.fa-fw
        = f.input :maternal_name, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'Apellido materno' }

  .row
    .col-md-6
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-envelope.fa-fw
        = f.input :email, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'correo@dominio.com' }

  .row
    .col-md-6
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-lock.fa-fw
        = f.input :password, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'Contraseña' }

    .col-md-6
      .input-group.input-group-registry
        %span.input-group-addon.input-group-addon-registry
          %i.fa.fa-lock.fa-fw
        = f.input :password_confirmation, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: 'Confirmar contraseña',  }

  .row
    .col-md-7
      %p.lb-registry Teléfono de contacto:
      .col-xs-4.no-padding
        .input-group.input-group-registry
          = f.input :lada, required: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: '+52', maxlength: 3, value: '+52' }

      .col-xs-8
        .input-group.input-group-registry
          = f.input :number, required: true, autofocus: true, label: false, input_html: { class: 'form-control', 'aria-describedby' => 'sizing-addon2', placeholder: '55 55 55 55 55', maxlength: 10 }

  .row
    .col-md-4.col-md-offset-8.btn-group-registry
      %input.btn.btn.btn-info.btn-mudanza.btn-registrar{type: "submit", value: "Registrar"}
