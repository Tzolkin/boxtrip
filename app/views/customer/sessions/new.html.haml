%section.login
  .container
    .col-sm-4.col-sm-offset-4.col-login
      %h5
        %img{src: '/assets/logo_boxtrip.png'}
        Boxtrip
      %h5
        %strong INICIAR SESIÓN DE USUARIO
      %hr
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.input :email, required: true, autofocus: true, label: false, input_html: { class: 'form-control', placeholder: 'Correo electrónico' }
          .alert.alert-danger.alert-boxtrip{ role: 'alert' }
            Campo
            %strong incorrecto
        .form-group
          = f.input :password, required: true, autofocus: true, label: false, input_html: { class: 'form-control', placeholder: 'Contraseña' }
          .alert.alert-danger.alert-boxtrip{ role: 'alert' }
            Campo
            %strong incorrecto
          -# = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-group.center
          = render 'customer/shared/links'

        %hr
        .form-group.progress-demo
          = f.button :submit, 'Ingresar', class: 'btn btn-mudanza btn-login ladda-button', 'data-style' => 'zoom-in'
