  %meta{ content: "The easy moving service", name: "description" }
  %meta{ content: "moving, moving fast, easy moving", name: "keywords" }
  %meta{ content: "RandomWalker", name: "author" }
  %link{ href: "/vendor/img/favicon.png", rel: "icon", sizes: "16x16", type: "image/png" }
  -# Estilos
  %link{ href: "/vendor/css/fixed.css", rel: "stylesheet" }
  %link{ href: "/vendor/css/jquery-ui.min.css", rel: "stylesheet" }
  %link{ href: "/vendor/css/bootstrap.min.css", rel: "stylesheet" }
  %link{ href: "/vendor/css/font-awesome.min.css", rel: "stylesheet" }
